@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employees List";
}

<div class="card-group">
    @foreach (var employee in Model)
    {
        <div class="card m-4" style="max-width:275px; min-width:275px;" >
            <img class="card-img-top" src="~/images/noimage.jpg" />
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="details" asp-route-id="@employee.Id" class="btn btn-primary">View</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@employee.Id"
                   class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
</div>

