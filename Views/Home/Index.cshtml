@{
    ViewBag.Title = "Employee Mgmt";
}

<!-- Hero Section -->
<section class="hero text-white text-center py-5 m-2" style="background-color:darkorange">
    <div class="container">
        <h1 class="display-4">Welcome to Employee Management System</h1>
        <p class="lead">Manage your employees with ease and efficiency</p>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5">
    <div class="container">
        <h2 class="text-center">Features</h2>
        <div class="row">
            <!-- Feature 1 -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Store Employee Information</h5>
                        <p class="card-text">Securely store comprehensive employee details including personal information, role, and department.</p>
                    </div>
                </div>
            </div>
            <!-- Feature 2 -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">View and Edit Personal Details</h5>
                        <p class="card-text">Employees can view and update their personal details, ensuring that their information is always up-to-date.</p>
                    </div>
                </div>
            </div>
            <!-- Feature 3 -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <h5 class="card-title">Admin Management</h5>
                        <p class="card-text">Admins can view and manage all employee records, including the ability to delete employees details.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="bg-light py-5">
    <div class="container">
        <h2 class="text-center">About Us</h2>
        <p class="text-center">We are dedicated to providing the best employee management solutions to streamline your business operations.</p>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
