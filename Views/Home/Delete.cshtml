@model ApplicationUser

@{
    ViewBag.Title = "Delete Employee";
}

<form asp-controller="home" asp-action="delete" method="post" class="mt-3">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group row m-3" style="width:60%">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" disabled class="form-control" placeholder="Name">
        </div>
    </div>
    <div class="form-group row m-3" style="width:60%">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" disabled class="form-control" placeholder="Email">
        </div>
    </div>

    <div class="form-group row m-3" style="width:60%">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Department" disabled class="form-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Department>()">
                <option value="">Please Select</option>
            </select>
        </div>
    </div>

    <div class="form-group row m-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="List" asp-controller="home" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

