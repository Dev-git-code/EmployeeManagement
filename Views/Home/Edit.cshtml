@model Employee

@{
    ViewBag.Title = "Edit Employee Details";
}

<form asp-controller="home" asp-action="edit" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <input hidden asp-for="Email" /> 
    <div class="form-group row m-3" style="width:60%">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row m-3" style="width:60%">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" disabled class="form-control" placeholder="Email">
            
        </div>
    </div>

    <div class="form-group row m-3" style="width:60%">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Department" class="form-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Department>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row m-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="index" asp-controller="home" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

