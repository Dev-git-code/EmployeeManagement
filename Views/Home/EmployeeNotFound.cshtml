@model int

@{
    ViewBag.Title = "404 Error";
}

<div class="container text-center">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h4>404 Not Found</h4>
                </div>
                <div class="card-body">
                    <p class="display-1 text-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                    </p>
                    <h5 class="card-title">Employee Not Found</h5>
                    <p class="card-text">Employee with ID: @Model cannot be found.</p>
                    <a asp-controller="home" asp-action="list" class="btn btn-outline-success mt-3" style="width: 200px;">
                        Click here to see the list of all employees
                    </a>
                </div>
                
            </div>
        </div>
    </div>
</div>
