@model HomeDetailsViewModel
@inject SignInManager<IdentityUser> signInManager
@{
    ViewBag.Title = "Employee Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/noimage.jpg" style="max-width:350px" />

                <h4>Employee ID : @Model.Employee.Id</h4>
                <h4>Email : @Model.Employee.Email</h4>
                <h4>Department : @Model.Employee.Department</h4>
                 @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                {
                    <h4>Role : @Model.Employee.Role</h4>
                }

            </div>
            <div class="card-footer text-center">
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Home" asp-action="List" class="btn btn-primary">Back</a>
                }
                <a asp-controller="home" asp-action="edit" asp-route-id="@Model.Employee.Id"
                   class="btn btn-primary m-1">Edit</a>
                      
            </div>
        </div>
    </div>
</div>

