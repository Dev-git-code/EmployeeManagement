@model RegisterViewModel

@{
    ViewBag.Title = "User Registration";
}

<h1>User Registration</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-controller = "Account", asp-action = "Register" method="post">
            <input hidden asp-for="@Model.employee.Role" value="1" /> 
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row m-3" style="width:60%">
                <label asp-for="@Model.employee.Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.employee.Name" class="form-control">
                    <span asp-validation-for="@Model.employee.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-3" style="width:60%">
                <label asp-for="@Model.employee.Email" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="@Model.employee.Email" class="form-control" />
                    <span asp-validation-for="@Model.employee.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-3" style="width:60%; position: relative;">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div style="position: relative; width: 100%;">
                        <input asp-for="Password" class="form-control" id="password" style="padding-right: 40px;" />
                        <img src="https://media.geeksforgeeks.org/wp-content/uploads/20210917145551/eye.png"
                             width="20px"
                             height="20px"
                             style="position: absolute; top: 50%; right: 10px; transform: translateY(-50%); cursor: pointer;"
                             id="togglePassword" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-3" style="width:60%">
                <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-3" style="width:60%">
                <label asp-for="@Model.employee.Department" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="@Model.employee.Department" class="form-select mr-sm-2"
                            asp-items="Html.GetEnumSelectList<Department>()">
                        <option value="">Please Select</option>
                    </select>
                    <span asp-validation-for="@Model.employee.Department" class="text-danger"></span>
                </div>
            </div>

            
            <button type="submit" class="btn btn-primary m-3">Register</button>
        </form>
    </div>
</div>


@section Scripts {
    <script src="~/js/passwordToggle.js"></script>
}