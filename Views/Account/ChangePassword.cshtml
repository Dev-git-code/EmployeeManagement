@model ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}

<form asp-controller="Account" asp-action="ChangePassword" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <div class="form-group row m-3" style="width:60%">
        <label asp-for="OldPassword" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="OldPassword" class="form-control" placeholder="Current Password" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row m-3" style="width:60%">
        <label asp-for="NewPassword" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row m-3" style="width:60%">
        <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm New Password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row m-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="details" asp-controller="home" asp-route-id="@Model.Id" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>

