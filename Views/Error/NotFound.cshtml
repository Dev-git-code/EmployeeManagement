@{
    ViewBag.Title = "Not Found";
}

<div class="container text-center">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h4>@ViewBag.Title</h4>
                </div>
                <div class="card-body">
                    <p class="display-1 text-danger">
                        <i class="fas fa-exclamation-triangle"></i>
                    </p>
                    <h5 class="card-title">@ViewBag.ErrorMessage</h5>
                    <div class="d-flex justify-content-center">
                        <a asp-action="index" asp-controller="home" class="btn btn-outline-primary mt-3" style="width: 200px;">
                            Home Page
                        </a>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <small>If you think this is a mistake, please contact support.</small>
                </div>
            </div>
        </div>
    </div>
</div>
