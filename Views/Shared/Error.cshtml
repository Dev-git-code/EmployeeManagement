@{
    ViewBag.Title = "Error";
}

<div class="container text-center">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white">
                    <h4>Error</h4>
                </div>
                <div class="card-body">
                    <p class="display-1 text-warning">
                        <i class="fas fa-exclamation-circle"></i>
                    </p>
                    <h3 class="card-title">An error occurred while processing your request.</h3>
                    <p class="card-text">The support team is notified and we are working on the fix.</p>
                </div>
            </div>
        </div>
    </div>
</div>
